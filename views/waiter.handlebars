<form class="" method="get" action="/days">

  <h1>Daily work routine</h1>
  <table align="center">
    <thead>
      <tr>
        <th>Monday</th>
        <th>Tuesday</th>
        <th>Wednesday</th>
        <th>Thursday</th>
        <th>Friday</th>
        <th>Saturday</th>
        <th>Sunday</th>
      </tr>
    </thead>
    <ul>
       <td>
        {{#each monday}}
          <li>{{this}}</li>
        {{/each}}
</td>

      <td>
        {{#each tuesday}}
          <li>{{this}}</li>
        {{/each}}
      </td>

     <td>
        {{#each wednesday}}
          <li>{{this}}</li>
        {{/each}}

      </td>

        <td>{{#each thursday}}
          <li>{{this}}</li>
        {{/each}}

      </td>

      <td>  {{#each friday}}
          <li>{{this}}</li>
        {{/each}}

      </td>


      <td>  {{#each saturday}}
          <li>{{this}}</li>
        {{/each}}

      </td>

<td>
          {{#each sunday}}
          <li>{{this}}</li>
        {{/each}}
      </td>
    </ul>
  </table>
</form><br>
<form class="" method="post" action="/reset">
  <input type="submit" value="RESET" id="reset">
</form>
